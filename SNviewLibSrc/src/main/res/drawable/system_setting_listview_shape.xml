<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 渐变 ，背景色修改-->
    <gradient
        android:angle="270"
        android:endColor="@color/system_setting_listview_background"
        android:startColor="@color/system_setting_listview_background" />
    <!-- listview四周线条颜色及宽度 android:centerColor="@color/system_setting_listview_center" -->
    <!-- 描边 -->
    <stroke
        android:width="0.25dp"
        android:color="@color/system_setting_listview_line" />
    <!-- 圆角 ，去掉圆角-->
    <corners android:radius="0dip" />
    <!-- 边距 -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

</shape>