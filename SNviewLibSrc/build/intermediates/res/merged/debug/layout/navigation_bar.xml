<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="@color/navigation_bar_blue_bg">    
    <TextView android:id="@id/base_navigationbar_title" 
         android:textSize="@dimen/common_textsize_middle_20sp" 
         android:textColor="@android:color/white"
         android:layout_width="220dp" 
         android:layout_height="wrap_content" 
         android:textStyle="bold" 
         android:layout_centerInParent="true" 
         android:gravity="center"
         android:text="@string/navigation_title_realtime_preview" />

    <LinearLayout android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:weightSum="1.2">
        <Button android:id="@id/base_navigationbar_left_btn" 
            android:background="@drawable/navigation_bar_menu_btn_selector" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.2"/>
        <Button android:id="@id/base_navigationbar_extend_btn" 
            android:background="@drawable/navigation_bar_search_btn_selector" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <Button android:id="@id/base_navigationbar_right_btn" 
            android:background="@drawable/navigation_bar_channel_btn_selector" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
