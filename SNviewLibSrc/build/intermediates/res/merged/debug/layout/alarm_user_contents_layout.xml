<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/container_csvs4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system_setting_alarmuser_accept"
                android:textColor="#0A0A0A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_alarmuser_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5.0dip"
                android:gravity="center|left"
                android:maxLines="3"
                android:text="TextView"
                android:textColor="@color/gray_transplate"
                android:textSize="12sp" />
        </LinearLayout>

        <com.starnet.snview.componet.switchbutton.CheckSwitchButton
            android:id="@+id/alarm_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.25dip"
        android:background="@drawable/list_item_divider"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/alarmUserContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alarmuser_container_selector"
         >

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/channel_listview_right_arrow_sel" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/system_setting_alarm_item_marginleft"
            android:layout_toLeftOf="@id/iv_arrow"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/system_setting_alarmuser"
                android:textColor="#0A0A0A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_alarmusers"
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/system_setting_alarmuser_null"
                android:textColor="@color/gray_transplate"
                android:textSize="12sp" />
           
        </LinearLayout>
          <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#B2B2B2"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>