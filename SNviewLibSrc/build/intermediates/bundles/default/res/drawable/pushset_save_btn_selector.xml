<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/normal_lawngreen" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dip" />
            <!-- 四周线条颜色及宽度 -->
            <stroke android:width="0.25dp" android:color="@color/system_setting_listview_line" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/pressed_lawngreen" />

            <stroke android:width="1dp" android:color="@color/system_setting_listview_line" />

            <corners android:radius="5dip" />
        </shape>
    </item>

</selector>
