<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xm.cloudweight.LoginActivity">

    <ImageView
        android:scaleType="fitXY"
        android:background="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="400dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/lbhkzs"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@color/color_71bd5c"
            android:paddingBottom="@dimen/_5dp"
            android:paddingTop="@dimen/_5dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"/>

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/color_d9eac6"
            android:padding="@dimen/_30dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:hint="账号"
                android:textColorHint="@color/black"
                android:ems="10"
                android:background="@drawable/shape_white_round"
                android:singleLine="true" />


            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35dp"
                android:inputType="textPassword"
                android:textColorHint="@color/black"
                android:hint="密码"
                android:ems="10"
                android:background="@drawable/shape_white_round"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:singleLine="true" />

            <Button

                android:text="登录"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/anniu_b"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/white"
                android:id="@+id/btn_login"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
