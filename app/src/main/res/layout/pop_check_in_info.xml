<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_20dp">

    <View
        android:layout_width="398.5dp"
        android:layout_height="@dimen/_0.5dp"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/item_title"
            android:layout_width="wrap_content"
            android:text="客户信息"/>

        <TextView
            android:id="@+id/tv_info_customer"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/_12sp"
            tools:text="测试0121【中厨】"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/item_title"
            android:text="验收备注"/>

        <EditText
            android:id="@+id/et_info_remark"
            style="@style/check_in_edit"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:singleLine="false"
            tools:text="654445、22131"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/item_title"
            android:text="产地"/>

        <EditText
            android:id="@+id/et_info_produce_are"
            style="@style/check_in_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            tools:text="上海"/>
    </LinearLayout>

    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/item_title"
            android:text="批号"/>

        <EditText
            android:id="@+id/et_info_batch_num"
            style="@style/check_in_edit"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            tools:text="1312423141"/>
    </LinearLayout>

    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/item_title"
            android:text="上市凭证号"/>

        <EditText
            android:id="@+id/et_info_credentials_num"
            style="@style/check_in_edit"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            tools:text="34156464654"/>
    </LinearLayout>

    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/item_title"
            android:text="生产日期"/>

        <EditText
            android:id="@+id/et_info_produce_date"
            style="@style/check_in_edit"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            tools:hint="生产日期"/>
    </LinearLayout>

    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/item_title"
            android:text="有效日期"/>

        <EditText
            android:id="@+id/et_info_effective_date"
            style="@style/check_in_edit"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            tools:text="有效日期"/>
    </LinearLayout>

    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/grey"/>

</LinearLayout>
