<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_60dp"
    >
<LinearLayout
    android:background="@color/color_c5dcc0"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@drawable/shape_edit_round_bg_135c31"
        android:gravity="bottom"
        android:orientation="horizontal">

        <xm.cloudweight.widget.SearchAndFocusEditText
            android:id="@+id/et_history_goods_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="商品名"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp"/>

        <ImageView
            android:id="@+id/iv_history_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@drawable/tubiao_l_shous_a"/>

    </LinearLayout>
    <include layout="@layout/item_sort_out_history"/>

    <ListView
        android:id="@+id/lv_sort_sort_history"
        android:divider="@color/grey"
        android:background="@color/color_eaeaea"
        android:dividerHeight="@dimen/_0.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>

</LinearLayout>