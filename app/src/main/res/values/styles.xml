<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        //Dialog的windowFrame框为无
        <item name="android:windowIsFloating">true</item>
        //是否浮现在activity之上
        <item name="android:windowIsTranslucent">true</item>
        //是否半透明
        <item name="android:windowNoTitle">true</item>
        //是否显示title
        <item name="android:background">@android:color/transparent</item>
        //设置dialog的背景
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.7</item>
        //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="main_btns">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_10dp</item>
        <item name="android:drawablePadding">@dimen/_5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="item_title" parent="comm">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="similar_title" parent="comm">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="similar_content" parent="comm">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="item_content" parent="comm">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="comm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="check_in_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:layout_marginRight">@dimen/_15dp</item>
    </style>

    <style name="btn_border_less" parent="@style/Widget.AppCompat.Button.Borderless">
    </style>

</resources>
